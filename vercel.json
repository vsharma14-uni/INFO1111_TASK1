{
    // Build settings
    "build": {
      // Inject envâ€‘vars from Vercel dashboard
      "env": {
        "NEXT_PUBLIC_API_BASE_URL": "@api_base_url"
      },
      // Use the default Next.js build
      "commands": {
        "build": "next build"
      },
      // Distribute your build to these edge regions
      "regions": ["sfo1","iad1"]
    },
  
    // Cron jobs (runs at midnight UTC daily)
    "cron": [
      {
        "path": "/api/report",
        "schedule": "0 0 * * *"
      }
    ],
  
    // Custom routing for your API
    "routes": [
      { "src": "/api/(.*)", "dest": "/api/$1.js" }
    ]
  }
  