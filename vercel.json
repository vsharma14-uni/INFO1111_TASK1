{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    },
    {
      "src": "api/**/*.php",
      "use": "vercel-php@0.6.0",
      "config": {
        "php.ini": {
          "extension_dir": "/var/task/php/extensions",
          "extension": ["json"]
        }
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)\\.php",
      "dest": "/api/$1.php"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "NOW_PHP_DEBUG": "1"
  }
}
